@model Entities.Entities.CompraUsuario

@{
    ViewData["Title"] = "FinalizarCompra";
}

@*<h1>FinalizarCompra</h1>*@

<div>
    <h4>Dados da compra</h4>
    <br />
    <a class="nav-link text-dark" asp-area="" asp-controller="CompraUsuario" asp-action="ComfirmaCompra">Confirmar Compra</a>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Cep)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Cep)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeProdutos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeProdutos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>
    </dl>

    <h4>Produtos Comprados</h4>

    <table class="table">
        <thead>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Produto.Nome)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Produto.Imagem)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Produto.Descricao)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Produto.Observacao)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.QuantidadeProdutos)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.ValorTotal)
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaProdutos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @{
                            if (!string.IsNullOrWhiteSpace(item.Url))
                            {
                                <img width="80" height="80" src="@item.Url" />
                            }
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QtdCompra)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>